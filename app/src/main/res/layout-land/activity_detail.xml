<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/detail_title"
        style="@style/TitleTextTheme"
        android:layout_below="@+id/detail_image"
        android:layout_centerHorizontal="true"
        tools:text="AUDIO TITLE" />

    <TextView
        android:id="@+id/detail_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_title"
        android:layout_centerHorizontal="true"
        tools:text="ARTIST NAME" />

    <!-- ImageButtons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/skip_previous_button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="#FFF176"
            android:layout_marginRight="16dp"
            tools:src="@drawable/ic_skip_previous_button" />

        <ImageButton
            android:id="@+id/pause_button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="#FFF176"
            android:layout_marginRight="16dp"
            tools:src="@drawable/ic_pause_button" />

        <ImageButton
            android:id="@+id/stop_button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="#FFF176"
            android:layout_marginRight="16dp"
            tools:src="@drawable/ic_stop_button" />

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="#FFF176"
            android:layout_marginRight="16dp"
            tools:src="@drawable/ic_play_button" />

        <ImageButton
            android:id="@+id/skip_next_button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="#FFF176"
            android:layout_marginRight="16dp"
            tools:src="@drawable/ic_skip_next_button" />
    </LinearLayout>
</RelativeLayout>